@model RaymiMusic.AppWeb.Models.Auth.RegisterVM


@{
    ViewData["Title"] = "Registro";
}

<h2 class="text-white mb-4">@ViewData["Title"]</h2>

<form asp-action="RegisterUser" method="post" enctype="multipart/form-data" class="bg-dark p-4 rounded shadow" style="max-width: 500px; margin: auto;">

    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label text-white"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password" class="form-label text-white"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ConfirmPassword" class="form-label text-white"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="FotoPerfil" class="form-label text-white"></label>
        <input asp-for="FotoPerfil" type="file" class="form-control" />
        <span asp-validation-for="FotoPerfil" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success w-100">Registrar</button>
</form>

<p class="text-center text-white mt-3">
    ¿Ya tienes cuenta? <a asp-action="Login" class="text-info">Inicia sesión</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
