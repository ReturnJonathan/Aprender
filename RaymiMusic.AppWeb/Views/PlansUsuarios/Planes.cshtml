@{
    ViewData["Title"] = "Planes de Suscripción";
    string planActual = ViewBag.PlanActual as string;
}

<style>
    .plan-card {
        min-height: 450px;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 255, 100, 0.2);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .plan-card h4 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }

        .plan-card ul {
            font-size: 1.1rem;
            margin-bottom: 1rem;
            line-height: 2rem;
        }

        .plan-card p {
            font-size: 1.2rem;
            margin-bottom: 1.2rem;
        }

        .plan-card button {
            font-size: 1.1rem;
            padding: 0.6rem 1.2rem;
        }

    .plan-separator {
        margin-bottom: 2rem;
    }
</style>

<div class="container text-white mt-5">
    <h2 class="text-center mb-5">Elige tu Plan</h2>
    <div class="row justify-content-center g-5">

        <!-- Plan Free -->
        <div class="col-lg-3 col-md-5 plan-separator">
            <div class="card bg-dark text-white plan-card">
                <div>
                    <h4 class="text-center">
                        Free
                        @if (planActual == "Free")
                        {
                            <span class="badge bg-success ms-2">Plan Actual</span>
                        }
                    </h4>
                    <ul>
                        <li>Escuchar Música (Con Anuncios)</li>
                        <li>Seguir Artistas</li>
                        <li>Crear Playlist</li>
                    </ul>
                </div>
                <div>
                    <p class="text-center fw-bold">Costo: 0 Dólares Mensuales</p>
                    <div class="text-center">
                        <form asp-action="AsignarPlanFree" asp-controller="PlansUsuarios" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-success">
                                Cancelar Plan Actual
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>

        <!-- Plan Estudiantil -->
        <div class="col-lg-3 col-md-5 plan-separator">
            <div class="card bg-dark text-white plan-card">
                <div>
                    <h4 class="text-center">
                        Estudiantil
                        @if (planActual == "Estudiantil")
                        {
                            <span class="badge bg-success ms-2">Plan Actual</span>
                        }
                    </h4>
                    <ul>
                        <li>Escuchar Música (Sin Anuncios)</li>
                        <li>Seguir Artistas</li>
                        <li>Crear Playlist</li>
                    </ul>
                </div>
                <div>
                    <p class="text-center fw-bold">Costo: 3 Dólares Mensuales</p>
                    <div class="text-center">
                        <button onclick="location.href='@Url.Action("Create", "Pago", new { plan = "Estudiantil" })'" class="btn btn-outline-success">
                            Elegir Plan
                        </button>

                    </div>
                </div>
            </div>
        </div>

        <!-- Plan Individual -->
        <div class="col-lg-3 col-md-5 plan-separator">
            <div class="card bg-dark text-white plan-card">
                <div>
                    <h4 class="text-center">
                        Individual
                        @if (planActual == "Individual")
                        {
                            <span class="badge bg-success ms-2">Plan Actual</span>
                        }
                    </h4>
                    <ul>
                        <li>Escuchar Música (Sin Anuncios)</li>
                        <li>Seguir Artistas</li>
                        <li>Crear Playlist</li>
                    </ul>
                </div>
                <div>
                    <p class="text-center fw-bold">Costo: 5.99 Dólares Mensuales</p>
                    <div class="text-center">
                        <button onclick="location.href='@Url.Action("Create", "Pago", new { plan = "Individual" })'" class="btn btn-outline-success">
                            Elegir Plan
                        </button>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="text-center mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-lg px-4 rounded-pill">
            ← Volver Atrás
        </a>
    </div>

</div>
