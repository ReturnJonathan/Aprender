@{
    ViewData["Title"] = "Planes de Suscripción";
    string planActual = ViewBag.PlanActual as string;
}

<!-- Header -->
<div class="text-center mb-5">
    <h1 class="text-white fw-bold mb-3">
        <i class="me-2">👑</i> Elige tu Plan
    </h1>
    <p class="text-white-50 lead">Desbloquea todo el potencial de RaymiMusic</p>
</div>

<!-- Grid de planes estilo Spotify -->
<div class="row g-4 justify-content-center">
    <!-- Plan Free -->
    <div class="col-lg-4 col-md-6">
        <div class="card bg-dark text-white h-100 shadow-lg border-0 plan-card @(planActual == "Free" ? "border-success" : "")">
            @if (planActual == "Free")
            {
                <div class="position-absolute top-0 start-50 translate-middle">
                    <span class="badge bg-success rounded-pill px-3 py-2">
                        <i class="me-1">✅</i> Plan Actual
                    </span>
                </div>
            }
            <div class="card-body p-4 d-flex flex-column">
                <div class="text-center mb-4">
                    <div class="bg-secondary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center"
                         style="width: 80px; height: 80px;">
                        <i style="font-size: 2rem;">🎵</i>
                    </div>
                    <h3 class="fw-bold">Free</h3>
                    <div class="display-4 fw-bold text-success mb-2">$0</div>
                    <p class="text-white-50">Por mes</p>
                </div>

                <ul class="list-unstyled mb-4 flex-grow-1">
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Escuchar Música (Con Anuncios)
                    </li>
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Seguir Artistas
                    </li>
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Crear Playlist
                    </li>
                    <li class="mb-2">
                        <i class="text-danger me-2">❌</i> Sin descargas
                    </li>
                </ul>

                <div class="mt-auto">
                    @if (planActual == "Free")
                    {
                        <button class="btn btn-outline-success btn-lg w-100 rounded-pill" disabled>
                            <i class="me-1">✅</i> Plan Actual
                        </button>
                    }
                    else
                    {
                        <form asp-action="AsignarPlanFree" asp-controller="PlansUsuarios" method="post">
                            <button type="submit" class="btn btn-outline-light btn-lg w-100 rounded-pill">
                                Cambiar a Free
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Plan Estudiantil -->
    <div class="col-lg-4 col-md-6">
        <div class="card bg-dark text-white h-100 shadow-lg border-0 plan-card @(planActual == "Estudiantil" ? "border-success" : "")">
            @if (planActual == "Estudiantil")
            {
                <div class="position-absolute top-0 start-50 translate-middle">
                    <span class="badge bg-success rounded-pill px-3 py-2">
                        <i class="me-1">✅</i> Plan Actual
                    </span>
                </div>
            }
            <div class="card-body p-4 d-flex flex-column">
                <div class="text-center mb-4">
                    <div class="bg-warning rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center"
                         style="width: 80px; height: 80px;">
                        <i style="font-size: 2rem;">🎓</i>
                    </div>
                    <h3 class="fw-bold">Estudiantil</h3>
                    <div class="display-4 fw-bold text-success mb-2">$3</div>
                    <p class="text-white-50">Por mes</p>
                </div>

                <ul class="list-unstyled mb-4 flex-grow-1">
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Escuchar Música (Sin Anuncios)
                    </li>
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Seguir Artistas
                    </li>
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Crear Playlist
                    </li>
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Descargas limitadas
                    </li>
                </ul>

                <div class="mt-auto">
                    @if (planActual == "Estudiantil")
                    {
                        <button class="btn btn-success btn-lg w-100 rounded-pill" disabled>
                            <i class="me-1">✅</i> Plan Actual
                        </button>
                    }
                    else
                    {
                        <a href="@Url.Action("Create", "Pago", new { plan = "Estudiantil" })"
                           class="btn btn-warning btn-lg w-100 rounded-pill">
                            <i class="me-1">🎓</i> Elegir Plan
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Plan Individual -->
    <div class="col-lg-4 col-md-6">
        <div class="card bg-dark text-white h-100 shadow-lg border-0 plan-card position-relative @(planActual == "Individual" ? "border-success" : "")">
            <!-- Badge de más popular -->
            <div class="position-absolute top-0 start-50 translate-middle">
                <span class="badge bg-success rounded-pill px-3 py-2">
                    @if (planActual == "Individual")
                    {
                        <i class="me-1">✅</i> <text>Plan Actual</text>
                    }
                    else
                    {
                        <i class="me-1">⭐</i> <text>Más Popular</text>
                    }
                </span>
            </div>
            <div class="card-body p-4 d-flex flex-column">
                <div class="text-center mb-4">
                    <div class="bg-success rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center"
                         style="width: 80px; height: 80px;">
                        <i style="font-size: 2rem;">👑</i>
                    </div>
                    <h3 class="fw-bold">Individual</h3>
                    <div class="display-4 fw-bold text-success mb-2">$5.99</div>
                    <p class="text-white-50">Por mes</p>
                </div>

                <ul class="list-unstyled mb-4 flex-grow-1">
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Escuchar Música (Sin Anuncios)
                    </li>
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Seguir Artistas
                    </li>
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Crear Playlist
                    </li>
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Descargas ilimitadas
                    </li>
                    <li class="mb-2">
                        <i class="text-success me-2">✅</i> Calidad premium
                    </li>
                </ul>

                <div class="mt-auto">
                    @if (planActual == "Individual")
                    {
                        <button class="btn btn-success btn-lg w-100 rounded-pill" disabled>
                            <i class="me-1">✅</i> Plan Actual
                        </button>
                    }
                    else
                    {
                        <a href="@Url.Action("Create", "Pago", new { plan = "Individual" })"
                           class="btn btn-success btn-lg w-100 rounded-pill">
                            <i class="me-1">👑</i> Elegir Plan
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Botón de navegación -->
<div class="text-center mt-5">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-lg rounded-pill px-5">
        <i class="me-2">⬅️</i> Volver al Inicio
    </a>
</div>
